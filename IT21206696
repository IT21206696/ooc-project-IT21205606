//chef.h
class chef{
	private:
		int chefID;
		
	public:
	    chef(int cID);
	    void displayDetails(report * r);
	    ~chef();
};

//chef.cpp
#include<iostream>
#include<cstring>

using namespace std;

Chef::Chef(int cId)
{
	chefID = cID;
}

void Chef::displayDetails(report * r)
{
	cout << "Chef ID :" << chefID << endl;
}

Chef::~Chef()
{
	
}


